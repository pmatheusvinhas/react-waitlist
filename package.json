    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "storybook build && gh-pages -d storybook-static"
  },
  "keywords": [
    "react",
    "waitlist",
    "resend",
    "email",
    "audience",
    "component",
    "form"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.6.4",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-webpack5": "^8.6.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^19.0.10",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.7.3",
    "msw-storybook-addon": "^2.0.4",
    "react-docgen-typescript": "^2.2.2",
    "storybook": "^8.6.4",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pmatheusvinhas/react-waitlist.git"
  },
  "bugs": {
    "url": "https://github.com/pmatheusvinhas/react-waitlist/issues"
  },
  "homepage": "https://pmatheusvinhas.github.io/react-waitlist",
  "msw": {
    "workerDirectory": [
      "public"
    ]
